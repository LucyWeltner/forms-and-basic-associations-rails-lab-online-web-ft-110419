<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>
  <p><%= f.label :artist_name %>
  <%= f.text_field :artist_name %></p>
  <p><%= f.label :genre_id %>
  	<%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <p><%= f.fields_for :notes do |notes_form| %>
  	<%= notes_form.label :content %>
  	<%= notes_form.text_area :content %>
  <% end %>
  <%= f.submit %>
<% end %>


